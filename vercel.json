{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "devCommand": "bun run dev",
  "installCommand": "bun install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/",
      "destination": "/bootcamp",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/bootcamp",
      "destination": "/index.html"
    },
    {
      "source": "/bootcamp/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

